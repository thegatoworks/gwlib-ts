{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"jsx": true,
		"useJSXTextNode": true,
		"ecmaVersion": 2018,
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"ignorePatterns": [
		"/out"
	],
	"plugins": [
		"@typescript-eslint",
		"roblox-ts"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:roblox-ts/recommended"
	],
	"rules": {
		"no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
		"semi": ["warn", "always"],
		"quotes": ["error", "double"],
		"indent": ["warn", 4]
	}

}